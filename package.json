{
    "name": "bible-app",
    "version": "1.5.0",
    "description": "The Ultimate Offline Bible App for Study & Reflection",
    "main": "dist/main/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:main": "tsc -p src/main/tsconfig.json",
        "build:renderer": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build:main && npm run build:renderer && electron-builder --linux snap"
    },
    "author": "karaniph",
    "license": "MIT",
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.0",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "better-sqlite3": "^9.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.0"
    },
    "build": {
        "appId": "org.bible.app",
        "productName": "Bible App",
        "linux": {
            "target": "snap",
            "category": "Education"
        },
        "snap": {
            "confinement": "strict",
            "grade": "stable"
        },
        "files": [
            "dist/**/*",
            "assets/**/*"
        ],
        "extraResources": [
            {
                "from": "assets",
                "to": "assets"
            }
        ]
    }
}